<div class="row">
  <div class="col-xs-6 col-md-4"></div>
  <div class="col-xs-6 col-md-4">
	<div class="jumbotron">
		<h2 style="font-family:arial; color:white">Esqueceu sua senha?</h2>

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

		  <p><div><t style="font-family:arial; color:white"><%= f.label :email, color: "white" %></t><br />
		  <%= f.email_field :email, :autofocus => true %></div></p>
		  
		  <p><div><%= f.submit "Enviar email para nova senha",class: "btn btn-primary btn-lg" "btn btn-primary btn-lg" %></div></p>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
  </div>
  <div class="col-xs-6 col-md-4"></div>
</div>