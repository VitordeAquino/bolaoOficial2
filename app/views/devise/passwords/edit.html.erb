<div class="row">
  <div class="col-xs-6 col-md-4"></div>
  <div class="col-xs-6 col-md-4">
    <div class="jumbotron">

    	<h2 style="font-family:arial; color:white" align="center">Altere sua senha</h2>

			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
			  <%= f.hidden_field :reset_password_token %>

			  <div><t style="font-family:arial; color:white"><%= f.label :password, "Nova senha" %></t><br />
			  <%= f.password_field :password, :autofocus => true %></div>

			  <div><t style="font-family:arial; color:white"><%= f.label :password_confirmation, "Confirmar nova senha" %></t><br />
			  <%= f.password_field :password_confirmation %></div>

			  <div><%= f.submit "Alterar minha senha" %></div>
			<% end %>

    		<%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col-xs-6 col-md-4"></div>
</div>