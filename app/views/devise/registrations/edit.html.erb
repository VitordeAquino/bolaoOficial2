<div class="row">
  <div class="col-xs-6 col-md-4"></div>
  <div class="col-xs-6 col-md-4">
  <div class="jumbotron">

      <h2 style="font-family:arial; color:white">Editar meu Perfil</h2>
      <p> </p>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= devise_error_messages! %>
        
        <p><div><t style="font-family:arial; color:white"><%= f.label :nome %></t><br /></p>
        <%= f.text_field :nome%></div>

        <p><div><t style="font-family:arial; color:white"><%= f.label :email %></t><br /></p>
        <%= f.email_field :email, :autofocus => true %></div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <p><div><t style="font-family:arial; color:white"><%= f.label :nova_senha %></t> <br /></p>
        <%= f.password_field :password, :autocomplete => "off" %></div>

        <p><div><t style="font-family:arial; color:white"><%= f.label :confirmação_de_nova_senha %></t><br /></p>
        <%= f.password_field :password_confirmation %></div>

        <p><div><t style="font-family:arial; color:white"><%= f.label :senha_atual %> <i>(Para confirmar troca)</t></i><br /></p>
        <%= f.password_field :current_password %></div>

        <p><div><%= f.submit "Atualizar",class: "btn btn-primary btn-lg" %></div></p>
      <% end %>

      <h3 style="font-family:arial; color:white">Cancelar minha conta</h3>

      <p><%= button_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Tem certeza que quer cancelar sua conta?" }, :method => :delete, class: "btn btn-danger btn-lg" %></p>
  </div>
  </div>
  <div class="col-xs-6 col-md-4"></div>
</div>
